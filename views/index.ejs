<%- include ('./partials/header.ejs') %>
  <%- include ('./partials/homenavbar.ejs') %>

    <body>

      <div class="container">
        <div class="jumbotron">
          <h1 class="display-4">Seja bem vindo</h1>
          <p class="lead">Este é um simples blog do programador</p>
          <hr class="my-4">
          <p>Programar é dar ordens para que os computadores façam o que você quer que eles façam.
          </p>
          <p class="lead">
            <a class="btn btn-primary btn-lg" href="#" role="button">Ler mais</a>
          </p>
        </div>
        <% articles.forEach(article=> { %>
          <div class="card">
            <div class="card-header">
              <h2>
                <%=article.title%>
              </h2>
            </div>
            <div class="card-body">
              <a href="<%= article.slug %> " class="btn btn-success">Ler artigo</a>
            </div>
          </div>
          <br>
          <% }) %>
      </div>
    </body>

    <%- include ('./partials/footer.ejs') %>